box-shadow(args)
      -webkit-box-shadow: args
      -moz-box-shadow: args
      box-shadow: args


transform(args)
      -webkit-transform: args
      -moz-transform: args
      -ms-transform: args
      -o-transform: args
      transform: args

.my-card
      display: block
      text-align: center
      background: white
      width: 100%
      border 1px solid rgba(128, 128, 128, 0.15)
      margin-bottom 16px
      box-shadow(2px 5px 10px 0.5px rgba(128, 128, 128, 0.35))

      &:hover
            background rgba(169, 169, 169, .01)
            transform(translate(2px, 2px))

      .my-card-top
            font-size 36px
            font-weight 600
            padding 8px
            border-bottom 1px solid rgba(0,0,0,0.04)
            color darkgrey

      div.my-card-header
            font-size 16px
            line-height 2.0
            text-align center
            padding 16px
            text-transform uppercase

.center-block
      display block
      width 100%

      ul
            margin 0 auto


.tabletoolbar-list
      padding 0
      text-align center

      li
            list-style-type none
            padding 0 10px 0 0
            display inline-block

            a
                  font-size 24px
                  font-weight 700
